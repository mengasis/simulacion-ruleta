<p id="notice"><%= notice %></p>

<h1>Gamers</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |gamer| %>
      <tr>
        <td><%= gamer.usuario %></td>
        <td><%= gamer.saldo %></td>
        <td><%= link_to 'Jugar', gamer %></td>
        <td><%= link_to 'Ver', gamer %></td>
        <td><%= link_to 'Editar', edit_gamer_path(gamer) %></td>
        <td><%= link_to 'Eliminar', gamer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo jugador', new_gamer_path %>
<%= link_to 'Volver', root_path %>
